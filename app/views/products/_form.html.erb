<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id, as: :hidden, value: current_user.id %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :image_url %>
    <%= f.input :price %>
    <%= f.input :stock %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
